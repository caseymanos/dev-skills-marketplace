{
  "name": "autobiography-builder",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:migrate": "pnpm --filter database migrate",
    "db:generate": "pnpm --filter database generate",
    "deploy": "turbo run deploy",
    "deploy:api": "pnpm --filter api deploy",
    "deploy:web": "pnpm --filter web deploy"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "playwright": "^1.57.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
