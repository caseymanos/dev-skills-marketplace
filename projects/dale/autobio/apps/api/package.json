{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "db:migrate:local": "wrangler d1 migrations apply autobiography-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply autobiography-db --remote"
  },
  "dependencies": {
    "@autobiography/database": "workspace:*",
    "@autobiography/types": "workspace:*",
    "@hono/zod-validator": "^0.4.2",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.54.0"
  }
}
